" delete
nnoremap d "_d
nnoremap D "_D
nnoremap x "_x
nnoremap X "_X
" replace
nnoremap c "_c
nnoremap C "_C
" cut
nnoremap yd d
nnoremap yD D
nnoremap yx x
nnoremap yX X
nnoremap yc c
nnoremap yC C
" visual mode replace without copying the deleted text
vnoremap p "_dP
vnoremap P "_dP
" Home, End
nnoremap gh ^
vnoremap gh ^
onoremap gh ^
nnoremap gl $
vnoremap gl $
onoremap gl $
nnoremap L E
vnoremap L E
onoremap L E
nnoremap H B
vnoremap H B
onoremap H B


